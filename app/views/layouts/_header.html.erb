<div class="header-bar navbar">
  <div class="container header-container">
    <div class="navbar-header">
      <a class="navbar-brand" href="#"><%= t "static_pages.itravel_logo" %></a>
    </div>
    <ul class="nav navbar-nav pull-right">
      <li><a href="#"><%= t ".home" %></a></li>
      <% if !current_user.nil? %>
        <li><%= link_to t(".home"), root_url %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.name %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), "#" %></li>
            <li><%= link_to t(".edit_profile"), edit_user_registration_path %></li>
            <li class="divider"></li>
            <li>
              <li><%= link_to t(".sign_out"),
                destroy_user_session_path, method: :delete %>
              </li>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t(".login"), new_user_session_path %></li>
      <% end %>
    </ul>
  </div>
</div>
